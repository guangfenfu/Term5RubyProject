<div class="container">
  <div class="row">
    <div class="col-sm-12" style="text-align:right;">
      <%# Remove All %>
      <%= link_to "Remove All", remove_all_shopping_cart_index_path, method: :post %>
    </div>
  </div>
  <%# Shopping Cart, diplay items, edit quantity and Remove function %>
  <div class="row">
    <div class="col-sm-12">
      <% @cart.each do |item| %>
        <div class="container">
          <div class="row">
            <div class="col-sm-1">
              <%= image_tag item['product'].image_link.url, size:"50x50" %>
            </div>
            <div class="col-sm-6">
              <%= item['product'].name %>
            </div>
            <div class="col-sm-1">
              $<%= item['product'].price %>
            </div>
            <div class="col-sm-1">
              <input type="text" style="width:100%;" value="<%= item['quantity'] %>" />
            </div>
            <div class="col-sm-2">
              <%= "$20.00" %>
            </div>
            <div class="col-sm-1">
              <%= link_to "Remove", remove_shopping_cart_path(item['product'].id), method: :post %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>