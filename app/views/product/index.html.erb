<div class="container">

  <div class="row">
    <!-- Search -->
    <div class="col-sm-8 col-xl-9" style="padding:0;" >
      <form method="get">
        <input type="text" name="search" style="width:100%; height:25px;" />
    </div>
    <div class="col-sm-2 col-xl-2" style="padding:0;" >
        <select name="category" style="width:100%; height:25px;" >
          <option value =  >All</option>
          <% @categories.each do |category| %>
            <option value = <%= category.id %>><%= category.name %></option>
          <%end%>
        </select>
    </div>
    <div class="col-sm-2 col-xl-1" style="padding:0;" >
        <input type="submit" value="SUBMIT" style="width:100%; height:25px;" />
      </form>
    </div>



  </div>


  <div class="row">
    <div class="col-xs-12 col-sm-3 col-md-2">
      <div class="card bg-dark text-white">SHOP BY</div>
        <aside class="widget woocommerce widget_product_categories">
          <h6 class="widget-title" style="margin-top:20px;">BY CATEGORIES</h6>
          <ul class="product-categories">
          <!-- Side Nav, by caegories -->
          <p><%=@group%></p>
          <% @categories.each do |category| %>
            <li class="cat-item"><%= link_to category.name, product_index_path(category: category.id) %></li>
          <%end%>
          </ul>
        </aside>
    </div>

    <div class="col-col-xs-12 col-sm-9 col-md-10">
      <!--Pagination -->
      <%= paginate @product_collection %>
      <!--show all products -->
      <%= render partial: 'product',
           collection: @product_collection,
           locals:{show_link: true} %>
    </div>
  </div>

</div>





















